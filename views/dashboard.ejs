<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Painel de Administração</title>

  <style>
    /* ===== RESET ===== */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Inter", sans-serif;
    }

    body {
      background: #f5f7fb;
      color: #333;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .container {
      width: 100%;
      max-width: 1100px;
      padding: 20px;
      margin: 30px auto;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    }

    /* ===== HEADER ===== */
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
    }

    .dashboard-header h1 {
      font-size: 1.8rem;
      font-weight: 700;
      color: #1a202c;
    }

    .btn-logout {
      background: #e53e3e;
      color: #fff;
      text-decoration: none;
      padding: 10px 16px;
      border-radius: 8px;
      transition: background 0.3s;
    }

    .btn-logout:hover {
      background: #c53030;
    }

    /* ===== CARDS ===== */
    .cards-container {
      display: flex;
      justify-content: space-between;
      gap: 20px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .card {
      flex: 1;
      background: #f9fafb;
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      padding: 20px;
      text-align: center;
      transition: all 0.3s;
      min-width: 180px;
    }

    .card:hover {
      background: #edf2f7;
      transform: translateY(-3px);
    }

    .card h3 {
      font-size: 1rem;
      color: #4a5568;
      margin-bottom: 10px;
    }

    .card p {
      font-size: 1.5rem;
      font-weight: bold;
      color: #2d3748;
    }

    /* ===== FORM ===== */
    form {
      margin-bottom: 20px;
    }

    form h2 {
      font-size: 1.2rem;
      margin-bottom: 10px;
      color: #2d3748;
    }

    form input {
      padding: 10px;
      border: 1px solid #cbd5e0;
      border-radius: 8px;
      margin-right: 10px;
    }

    form button {
      background: #38a169;
      color: #fff;
      padding: 10px 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s;
    }

    form button:hover {
      background: #2f855a;
    }

    /* ===== TABELA ===== */
    .table-wrapper {
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      text-align: left;
      padding: 12px 16px;
      border-bottom: 1px solid #e2e8f0;
    }

    th {
      background: #edf2f7;
      color: #2d3748;
      font-weight: 600;
    }

    td {
      color: #4a5568;
    }

    td form {
      display: inline;
    }

    .btn-primary {
      background: #3182ce;
      color: #fff;
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .btn-primary:hover {
      background: #2b6cb0;
    }

    .btn-danger {
      background: #e53e3e;
      color: #fff;
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .btn-danger:hover {
      background: #c53030;
    }

    /* ===== RESPONSIVIDADE ===== */
    @media (max-width: 900px) {
      .cards-container {
        flex-direction: column;
        gap: 10px;
      }

      .dashboard-header {
        flex-direction: column;
        gap: 10px;
        text-align: center;
      }

      table {
        font-size: 0.9rem;
      }

      form input {
        margin-bottom: 10px;
        width: 100%;
      }

      form button {
        width: 100%;
      }
    }

    @media (max-width: 600px) {
      .container {
        padding: 15px;
      }

      .dashboard-header h1 {
        font-size: 1.5rem;
      }

      .card p {
        font-size: 1.3rem;
      }

      table, th, td {
        font-size: 0.85rem;
      }
    }

  </style>
</head>
<body>

  <div class="container">
    <!-- Cabeçalho -->
    <div class="dashboard-header">
      <h1>Gerenciamento de Keys</h1>
      <a href="/logout" class="btn-logout">Sair</a>
    </div>

    <!-- Cards -->
    <div class="cards-container">
      <div class="card">
        <h3>Total de Keys</h3>
        <p><%= Object.keys(keys).length %></p>
      </div>
      <div class="card">
        <h3>Keys Usadas</h3>
        <p><%= Object.values(keys).filter(k => k.used >= k.limit).length %></p>
      </div>
      <div class="card">
        <h3>Ativas</h3>
        <p><%= Object.values(keys).filter(k => k.used < k.limit).length %></p>
      </div>
    </div>

    <!-- Criar nova key -->
    <form method="POST" action="/keys/create">
      <h2>Criar nova Key</h2>
      <div style="display: flex; flex-wrap: wrap; gap: 10px;">
        <input type="text" name="key" placeholder="Nova Key" required>
        <input type="number" name="limit" placeholder="Limite" required>
        <button type="submit">Criar</button>
      </div>
    </form>

    <!-- Tabela -->
    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>Key</th>
            <th>Usada</th>
            <th>Limite</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% for (const k in keys) { %>
            <tr>
              <td><%= k %></td>
              <td><%= keys[k].used %></td>
              <td><%= keys[k].limit %></td>
              <td>
                <form method="POST" action="/keys/reset">
                  <input type="hidden" name="key" value="<%= k %>">
                  <button class="btn-primary">Resetar</button>
                </form>
                <form method="POST" action="/keys/delete">
                  <input type="hidden" name="key" value="<%= k %>">
                  <button class="btn-danger">Deletar</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
